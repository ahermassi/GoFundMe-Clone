<body>
    <main class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="heading">Crowdfunding Web App</h1>
                <nav class="navbar navbar-inverse">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="#">WebSiteName</a>
                        </div>
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="/">Home</a></li>
                            
                            {{#if logged}}
                            <li class="active"><a href="/projects/search">Search</a></li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="/projects/new">Start a campaign
                                    <span class="caret"></span></a>
